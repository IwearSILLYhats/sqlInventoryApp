<div>
    <h1>Delete <%= ingredient.ingredient_name%> </h1>
    <p>Are you sure you want to delete this ingredient?</p>
     <% if(typeof recipes !== "undefined" && recipes.length >0){ %>
        <p>The following recipes will lose this tag if you proceed:</p>
        <ul>
            <% recipes.forEach(recipe => { %>
                <a href="/recipes/<%= recipe.recipe_id %>">
                    <li><%= recipe.recipe_name %></li>
                </a>
            <% }) %>
        </ul>
    <% } %>
    <form action="" method="post">
        <input type="hidden" name="id" value="<%= ingredient.ingredient_id %>">
        <button type="submit">Delete this ingredient</button>
    </form>
</div>
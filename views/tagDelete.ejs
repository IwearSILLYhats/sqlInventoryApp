<div>
    <h1>Delete <%= tag.tag%> </h1>
    <p>Are you sure you want to delete this tag?</p>
     <% if(typeof recipes !== "undefined" && recipes.length >0){ %>
        <p>The following recipes will lose this tag if you proceed:</p>
        <ul>
            <% recipes.forEach(recipe => { %>
                <a href="/recipes/<%= recipe.recipe_id %>">
                    <li><%= recipe.recipe_name %></li>
                </a>
            <% }) %>
        </ul>
    <% } %>
    <form action="" method="post">
        <input type="hidden" name="id" value="<%= tag.tag_id %>">
        <button type="submit">Delete this tag</button>
    </form>
</div>